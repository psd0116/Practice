generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

// 1. User 모델 (회원 정보 저장)
model User {
  id           Int      @id @default(autoincrement()) // 고유 ID (자동 증가)
  email        String   @unique // 이메일 (중복 불가능, 로그인 ID로 사용)
  password     String // 비밀번호 (암호화하여 저장)
  username     String? // 닉네임 (선택 사항)
  profileImage String? // 프로필 사진 URL
  createdAt    DateTime @default(now()) // 가입 시간 (자동 생성)
  updatedAt    DateTime @updatedAt // 수정 시간 (자동 업데이트)
  // 관계 설정
  posts Post[] // 유저가 작성한 게시글들
}

// 2. Post 모델 (게시글 저장)
model Post {
  id       Int     @id @default(autoincrement())
  title    String // 제목
  content  String // 내용
  category String? // 카테고리 (자유, 질문 등)
  views    Int     @default(0) // 조회수

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 작성자 관계
  authorId Int
  author   User @relation(fields: [authorId], references: [id])
}
